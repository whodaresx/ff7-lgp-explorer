{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for the main window",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:path:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "opener:default",
    "opener:allow-reveal-item-in-dir",
    "updater:default"
  ]
}
